<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>En La Cancha | @ViewBag.Title</title>
    <link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,600,700' rel='stylesheet' type='text/css'>
    <!-- Add local styles, mostly for plugins css file -->
    @if (IsSectionDefined("Styles"))
    {@RenderSection("Styles", required: false)}

    <!-- Add jQuery Style direct - used for jQGrid plugin -->
    <link href="@Url.Content("~/Scripts/plugins/jquery-ui/jquery-ui.css")" rel="stylesheet" type="text/css" />

    <!-- Primary Inspinia style -->
    @Styles.Render("~/font-awesome/css")
    @Styles.Render("~/Content/css")
    @*@Styles.Render("~/Content/plugins/owl")*@
    @*<link href="~/Content/plugins/owl/owl.carousel.css" rel="stylesheet" />
    <link href="~/Content/plugins/owl/owl.theme.css" rel="stylesheet" />
    <link href="~/Content/plugins/owl/owl.transitions.css" rel="stylesheet" />*@
   
    <script src="~/Scripts/kendo/jquery.min.js"></script>
    @Styles.Render("~/Content/customcss")
    @Scripts.Render("~/plugins/dataPicker")

    @Styles.Render("~/plugins/dataPickerStyles")
</head>
<body class="md-skin top-navigation new-style bg-white">

    <!-- Skin configuration box -->
    @Html.Partial("_SkinConfig")

    <!-- Wrapper-->
    <!-- PageClass give you ability to specify custom style for specific view based on action -->
    <div id="wrapper" class="@Html.PageClass()">

        <!-- Page wraper -->
        <div id="page-wrapper" class="@ViewBag.SpecialClass">

            <!-- Top Navbar -->
            @Html.Partial("_TopNavbarnew")

            <!-- Main view  -->
            <div id="loaderSection" style="display: none">
                @Html.Partial("LoaderCircle")
            </div>
            <div id="bodycontainer">
                @RenderBody()
            </div>

            <!-- Footer -->
            @Html.Partial("_Footer")

        </div>
        <!-- End page wrapper-->

    </div>
    <!-- End wrapper-->
    <!-- Section for main scripts render -->
   

    @Scripts.Render("~/bundles/jqueryval")

    @*<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>*@
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/plugins/slimScroll")
    @Scripts.Render("~/bundles/inspinia")
    @*@Scripts.Render("~/bundles/typeahead")*@
    <!-- Skin config script - only for demo purpose-->
    @Scripts.Render("~/bundles/skinConfig")
    @*@Scripts.Render("~/plugins/owl")*@

    <!-- Handler for local scripts -->
    @RenderSection("scripts", required: false)
</body>
</html>